issn = {1662-5161},
journal = {Frontiers in human neuroscience},
keywords = {Bayesian inference,Learning,decision-making,filtering,free energy,hierarchical modeling,uncertainty,volatility},
language = {English},
month = {jan},
pages = {825},
pmid = {25477800},
