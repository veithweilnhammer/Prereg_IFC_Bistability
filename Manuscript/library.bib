journal = {The Journal of Neuroscience},
keywords = {attention,awareness,consciousness,metacognition,prefrontal cortex},
month = {oct},
number = {40},
pages = {9593--9602},
pmid = {28978696},
title = {{Should a Few Null Findings Falsify Prefrontal Theories of Conscious Perception?}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/28978696 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC5628405 http://www.jneurosci.org/lookup/doi/10.1523/JNEUROSCI.3217-16.2017},
volume = {37},
