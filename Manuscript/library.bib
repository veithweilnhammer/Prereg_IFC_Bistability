journal = {Curr. Biol},
keywords = {Ambiguous Figures,Bistable Motion,Bistable Perception,Humans,Intermittent Presentation,Sensory Memory,Structure from Motion,Temporal Dynamics,Visual Perception},
number = {13},
pages = {1076--1085},
pmid = {12842006},
title = {{Perception of temporally interleaved ambiguous patterns}},
