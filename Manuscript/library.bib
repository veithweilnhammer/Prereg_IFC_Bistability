journal = {Journal of vision},
keywords = {Bayes Theorem,Decision Making,Fixation, Ocular,Fixation, Ocular: physiology,Form Perception,Form Perception: physiology,Humans,Memory,Memory: physiology,Models, Neurological,Orientation,Orientation: physiology,Photic Stimulation,Predictive Value of Tests},
